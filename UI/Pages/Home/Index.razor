@page "/"

<UseGetAuthors Context="result">
    <ChildContent>
        @if (result?.Authors is not null)
        {
            <MudGrid class="py-4">
                @foreach (var item in result.Authors)
                {
                    <MudItem xs="12" sm="6" md="4">
                        <AuthorCard Author="@item" />
                    </MudItem>
                }
            </MudGrid>
        }
    </ChildContent>
    <ErrorContent>
        Something went wrong ...<br />
        @result.First().Message
    </ErrorContent>
    <LoadingContent>
        <Loading />
    </LoadingContent>
</UseGetAuthors>
