
<MudCard style="height: 300px; overflow: auto">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Primary">@_abbreviatedName</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Author.FirstName @Author.LastName</MudText>
            <MudText Typo="Typo.body2">@($"-{Author.Gender}, {Author.Age} years")</MudText> 
        </CardHeaderContent>
        <CardHeaderActions>
            <MudTooltip Text="Show Books">
                <MudIconButton Icon="@Icons.Material.Filled.MenuBook" Color="Color.Dark" />
            </MudTooltip>
            <MudTooltip Text="Delete Author">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(async() => await OnDelete.InvokeAsync(Author.Id))" />
            </MudTooltip>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <div class="d-flex">
            <MudIcon Style="font-size: 6rem;" Icon="@Author.Icon" class="mx-auto"/>
        </div>
    </MudCardContent>
    <MudCardActions>
         <MudText Typo="Typo.caption">@(Author.Bio ?? "-")</MudText>
    </MudCardActions>
</MudCard>

@code {
    [Parameter] public IGetAuthors_Authors Author { get; set; }   
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private string _abbreviatedName => Author is null ? "AA" : $"{Author.FirstName[0]}{Author.LastName[0]}";
}